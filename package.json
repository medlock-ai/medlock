{
  "name": "healthmcp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "yarn workspace @healthmcp/web dev",
    "build": "yarn workspace @healthmcp/web build && yarn workspace @healthmcp/mcp build",
    "build:web": "cd apps/web && yarn build:cloudflare",
    "build:mcp": "cd apps/mcp && yarn build",
    "dev:web": "yarn workspace @healthmcp/web dev",
    "dev:mcp": "yarn workspace @healthmcp/mcp dev",
    "test": "yarn workspaces foreach -A run test",
    "test:mcp": "yarn workspace @healthmcp/mcp test",
    "test:web": "yarn workspace @healthmcp/web test",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "lint": "yarn workspaces foreach -A run lint",
    "format:check": "yarn workspaces foreach -A run format:check",
    "test:ci": "yarn workspaces foreach -A run test:ci",
    "build:cloudflare": "cd apps/web && yarn build:cloudflare",
    "deploy": "cd apps/web && yarn deploy",
    "preview": "cd apps/web && yarn preview",
    "deploy:mcp": "cd apps/mcp && npx wrangler deploy -c wrangler.jsonc --env=''",
    "ci:build:mcp": "echo 'Building MCP Server - No compilation required for Workers'",
    "ci:build:web": "yarn install && cd apps/web && yarn build:cloudflare",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.3.1",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-jsx": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite": "^5.0.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.20.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.9.2"
}
